<resources>
    <style name="Theme.StoryHive" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/textOnPrimary</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/accentColor</item>
        <item name="colorOnSecondary">@color/textPrimary</item>

        <!-- Background and Surface -->
        <item name="colorSurface">@color/cardBackground</item>
        <item name="colorOnBackground">@color/textPrimary</item>
        <item name="colorOnSurface">@color/textSecondary</item>

        <!-- Error Colors -->
        <item name="colorError">@color/errorColor</item>
        <item name="colorOnError">@color/textOnPrimary</item>
    </style>
</resources>
